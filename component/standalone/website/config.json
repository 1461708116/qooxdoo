{
  "name"    : "website component",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json",
      "block" : [
        "test-source", 
        "test-build", 
        "build", 
        "source"
      ]
    },
    {
      "path" : "${QOOXDOO_PATH}/component/testrunner/portable.json",
      "as" : "testrunner-portable"
    }
  ],

  "export" :
  [
    //"build", Uncompressed build not available until #6265 is fixed
    "build-min",
    "build",
    "source",
    "test-source",
    "test-build",
    "log-deps"
  ],


  "let" :
  {
    "APPLICATION"  : "library",
    "QOOXDOO_PATH" : "../../..",
    "API_EXCLUDE"  : ["qx.test.*"],
    "LOCALES"      : [ "en" ],
    "CACHE"        : "${TMPDIR}/qx${QOOXDOO_VERSION}/cache",
    "BUILD_PATH"   : "script",
    "ROOT"         : ".",
    "TESTRUNNER_ROOT" : "${QOOXDOO_PATH}/component/testrunner",
    "TEST_SCRIPT_PATH"  : "./test/script",
    "Q_INCLUDES" : [
      "qx.module.Css",
      "qx.module.Attribute",
      "qx.module.Manipulating",
      "qx.module.Animation",
      "qx.module.Traversing",
      "qx.module.Event",
      "qx.module.event.Native",
      "qx.module.event.Mouse",
      "qx.module.event.Keyboard",
      "qx.module.Template",
      "qx.module.Polyfill",
      "qx.module.Placement",
      "q"
    ]
  },

  "config-warnings" : 
  {
    "job-shadowing" : [ "common" ]
  },

  "jobs" :
  {
    "common" :
    {
      "=include" : "${Q_INCLUDES}",
      
      "environment" :
      {
        "qx.version"     : "${QOOXDOO_VERSION}",
        "qx.debug" : false
      },

      "=library" : 
      [
        {
           "manifest": "${QOOXDOO_PATH}/framework/Manifest.json"
        }
      ]
    },

    "log-deps" :
    {
      "extend" : ["build"],
    
      "log" : 
      {
        "dependencies" : {
          "dot" : {
            "root" : "qx.module.Template",
            "compiled-class-size" : false
            },
          "type"   : "using",
          "phase" : null,
          "include-transitive-load-deps" : true,
          "force-fresh-deps" : true,
          "format" : "dot"
        }
      }
    },
    
    "build" :
    {
      "extend" : ["build-script"],
      
      "let" :
      {
        "OPTIMIZE" : ["variants"]
      },
      
      "compile-options" :
      {
        
        "code" : {
          "format" : true
        },
        
        "paths"  :
        {
          "file" : "${BUILD_PATH}/q.js",
          "loader-template" : "${QOOXDOO_PATH}/tool/data/generator/website.loader.tmpl.js"
        }
      }
    },
    
    "build-min" :
    {
      "extend" : ["build"],
      
      "compile-options" :
      {
        "code" : {
          "=optimize" : ["basecalls", "comments", "privates", "strings", "variables", "variants"]
        },
        "paths"  :
        {
          "file" : "${BUILD_PATH}/q.min.js"
        }
      }
    },
    
    "source" :
    {
      "extend" : ["source-script"],
      
      "let" :
      {
        "OPTIMIZE" : []
      },
      
      "compile-options" :
      {
        "code" : { "except" : [ "*" ] },
        
        "paths" :
        {
          "file" : "${BUILD_PATH}/q-source.js",
          "app-root" : "",
          "loader-template" : "${QOOXDOO_PATH}/tool/data/generator/website.loader.source.tmpl.js"
          
        }
      }
    },
    
    "test-source" :
    {
      "run" : [
        "test-source-script"
      ]
    },
    
    "test-source-script" :
    {
      "extend" : ["testrunner-portable::source"],
      
      "desc" : "generates a combined source version of q and the portable test runner",
      
      "let" :
      {
        "TESTRUNNER_ORIGIN" : "external"
      },
      
      "environment" :
      {
        "qx.debug" : true
      },
      
      "include" : "${Q_INCLUDES}",
      
      "compile-options" :
      {
        "paths" :
        {
          "file" : "${TEST_SCRIPT_PATH}/q-test-source.js"
        }
      }
    },
    
    "test-build" :
    {
      "run" : [
        "test-build-script",
        "gen-css"
      ]
    },
    
    "test-build-script" :
    {
      "extend" : ["testrunner-portable::build-script"],
      
      "desc" : "generates a combined build version of q and the portable test runner",
      
      "let" :
      {
        "TESTRUNNER_ORIGIN" : "external"
      },
      
      "include" : "${Q_INCLUDES}",
      
      "compile-options" :
      {
        "paths" :
        {
          "file" : "${TEST_SCRIPT_PATH}/q-test.js",
          "app-root" : "."
        }
      }
    },
    
    "gen-css" :
    {
      "extend" : ["testrunner-portable::gen-css", "cache"],
      
      "let" :
      {
        "BUILD_SCRIPT_FILE" : "${TEST_SCRIPT_PATH}/q-test.js"
      }
    }
  }
}
