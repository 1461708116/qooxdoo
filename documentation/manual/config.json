{
  "name"    : "Manual",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "watch"
  ],
  
  "default-job" : "source-hybrid",

  "let" :
  {
    "APPLICATION"  : "manual",
    "QOOXDOO_PATH" : "../..",
    "QXTHEME"      : "manual.theme.Theme",
    "API_EXCLUDE"  : ["qx.test.*", "${APPLICATION}.theme.*", "${APPLICATION}.test.*", "${APPLICATION}.simulation.*"],
    "LOCALES"      : [ "en" ],
    "CACHE"        : "${TMPDIR}/qx${QOOXDOO_VERSION}/cache",
    "ROOT"         : "."
  },

  "config-warnings" : 
  {
    "job-shadowing" : 
    [
      "watch"
    ]
  },

  "jobs" :
  {
    "watch" : 
    {
      "watch-files" : 
      {
        "path" : "source/pages",
        "command" : 
        {
          "line" : "sphinx-build -b html -d build/doctrees source build/html %(f)s",
          "per-file" : true
        },
        "include" : ["*.rst"]
      }
    }
  }
}
